rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read/write for inquiries (contact forms, feedback, seeds)
    match /inquiries/{inquiry} {
      allow read, write: if true;
    }
    
    // Allow public read for menu items
    match /menu-items/{item} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow public read for seeds
    match /robusta-seeds/{seed} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow public read for workshops
    match /workshops/{workshop} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow public read for art pieces
    match /art-pieces/{piece} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // All other collections require authentication
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
